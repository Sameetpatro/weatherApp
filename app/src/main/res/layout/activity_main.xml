<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context="com.example.weatherapp.MainActivity">

    <!-- Greeting Text -->
    <TextView
        android:id="@+id/greetingText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hey User, How's your day?"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:letterSpacing="0.03"
        android:shadowColor="#60000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"/>


    <!-- Top Guideline (15% space) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"/>

    <!-- Bottom Guideline (10% space) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90"/>

    <!-- Location -->
    <TextView
        android:id="@+id/locationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Fetching Your Location..."
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/topGuideline"/>

    <!-- Date -->
    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locationText"
        tools:text="20 April 2025, 2:00 PM"/>

    <!-- Condition -->
    <TextView
        android:id="@+id/conditionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateText"
        tools:text="Clear Sky"/>

    <!-- Temperature -->
    <TextView
        android:id="@+id/tempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="64sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/conditionText"
        tools:text="29°C"/>

    <!-- Min / Max Temp Row -->
    <LinearLayout
        android:id="@+id/minMaxRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/tempText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/minTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Temp: 18°C"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingEnd="16dp"/>

        <TextView
            android:id="@+id/maxTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Temp: 32°C"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingStart="16dp"/>
    </LinearLayout>

    <!-- Bottom Grid Info -->
    <GridLayout
        android:id="@+id/infoGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:rowCount="2"
        android:useDefaultMargins="true"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/bottomGuideline">

        <!-- Sunrise -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/card_bg"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iconSunrise"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_sunrise"
                android:contentDescription="Sunrise"/>

            <TextView
                android:text="Sunrise"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/sunriseTime"
                android:text="06:40 AM"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <!-- Sunset -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/card_bg"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iconSunset"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_sunset"
                android:contentDescription="Sunset"/>

            <TextView
                android:text="Sunset"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/sunsetTime"
                android:text="06:40 PM"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <!-- Wind -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/card_bg"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iconWind"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_wind"
                android:contentDescription="Wind"/>

            <TextView
                android:text="Wind"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/windValue"
                android:text="4.05 m/s"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <!-- Pressure -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/card_bg"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iconPressure"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_pressure"
                android:contentDescription="Pressure"/>

            <TextView
                android:text="Pressure"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/pressureValue"
                android:text="1024 hPa"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <!-- Humidity -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/card_bg"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iconHumidity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_humidity"
                android:contentDescription="Humidity"/>

            <TextView
                android:text="Humidity"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/humidityValue"
                android:text="36%"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </LinearLayout>

        <!-- More Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/card_bg"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iconMoreInfo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_info"
                android:contentDescription="More Info"/>

            <TextView
                android:text="More Info"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/moreInfoValue"
                android:text="Details"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
